{
  "name": "telefly",
  "version": "0.0.1",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:renderer\" \"bun run build:electron\" \"bun run start:electron\"",
    "build": "bun run build:renderer && bun run build:electron",
    "dev:renderer": "vite",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "preview": "vite preview",
    "electron": "electron .",
    "lint:eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:stylelint": "stylelint 'src/**/*.{css,js,jsx,ts,tsx}'",
    "lint": "bun run lint:eslint && bun run lint:stylelint",
    "fix": "stylelint 'src/**/*.{css,js,jsx,ts,tsx}' --fix"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@react-spring/web": "^10.0.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "lucide-react": "^0.541.0",
    "prebuilt-tdlib": "^0.1008052.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.1.1",
    "tdl": "^8.0.2"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "stylelint": "^16.23.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-recess-order": "^7.2.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  }
}