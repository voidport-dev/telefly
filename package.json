{
  "name": "telefly",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run build:electron\" \"npm run start:electron\"",
    "build": "npm run build:renderer && npm run build:electron",
    "dev:renderer": "vite",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "preview": "vite preview",
    "electron": "electron ."
  },
  "dependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wait-on": "^8.0.4"
  }
}